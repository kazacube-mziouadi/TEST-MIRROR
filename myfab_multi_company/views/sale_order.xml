<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- ============== -->
		<!-- sale ORDER -->
		<!-- ============== -->

		<!-- FORM VIEW sale order -->
        <record id='mf_view_form_sale_order_line_kit' model='ir.ui.view'>
			<field name="name">mf_view_form_sale_order_line_kit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_form_sale_order"/>
			<field name="priority" eval="1500" />
			<field name="arch" type="xml">
                <xpath expr="//field[@name='order_line_ids']/.." position="after">
                    <group colspan="4" col="4" string="sale order lines kit" attrs="{'invisible': [('mf_sale_order_line_kit_ids', '=', False)]}" >
                	    <field name="mf_sale_order_line_kit_ids" nolabel="1" colspan="4" 
									attrs="{'readonly': [('state', '!=', 'draft')]}"
									context="{'quotation_date':bool(quotation_date), 'default_sequence': max_sequence, 'default_transport_delay': transport_delay, 'default_requested_date': requested_date, 'default_currency_id': currency_id, 'default_company_id': company_id}">
							<tree string="sale order line kit">
								<field name="mf_product_id" />
								<field name="mf_bom_id" />
								<field name="mf_sec_uom_qty" />
							</tree>
							<form string="sale order line kit">
								<group colspan="2" col="2">
									<field name="mf_product_id" />
									<field name="mf_bom_id" />
									<field name="mf_sec_uom_qty" />
								</group>
							</form>
						</field>
                    </group>
                </xpath>
        	</field>
        </record>						
	</data>
</openerp>
