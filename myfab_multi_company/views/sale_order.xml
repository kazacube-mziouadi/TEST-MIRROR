<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- ============== -->
		<!-- sale ORDER -->
		<!-- ============== -->

		<!-- FORM VIEW sale order -->
        <record id='mf_view_form_sale_order_puchase_link' model='ir.ui.view'>
			<field name="name">mf_view_form_sale_order_puchase_link</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_form_sale_order"/>
			<field name="priority" eval="1500" />
			<field name="arch" type="xml">
                <xpath expr="//field[@name='ref_order']" position="after">
					<field name="mf_multi_company_purchase_order_id" invisible="1"/>
					<field name="mf_multi_company_purchase_order_name" attrs="{'invisible': [('mf_multi_company_purchase_order_id', '=', False)]}"/>
                </xpath>
        	</field>
        </record>						
	</data>
</openerp>
