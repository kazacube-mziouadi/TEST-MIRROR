<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- FORM VIEW PARTNER -->
        <record id='openprod_view_config_form_octopart' model='ir.ui.view'>
            <field name="name">Technical data settings</field>
            <field name="model">technical.data.config.settings</field>
            <field name="priority" eval="4000" />
            <field name="inherit_id" ref="purchase.technical_data_config_settings" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_allow_multiple_uom']" position="before">
                    <field name="name"/>
                    <field name="octopart_api_key"/>
                </xpath>

                <xpath expr="//group[last()]" position="after">
                    <group colspan="1" col="1" class="op_shortcuts" name="action_menu">
                        <separator string="Actions" colspan="1" name="separator_action_menu" />
                        <button name="import_all_data" string="Import Octopart datas"
                            type="object" class="oe_inline oe_stat_button" icon="fa-search" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

