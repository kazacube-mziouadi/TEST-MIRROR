<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="view_form_advanced_search">
            <field name="name">view_form_advanced_search</field>
            <field name="model">connector.advanced.search</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import wizard">
                    <group colspan="4" col="4" name="group_all">
                        <group colspan="4" col="4">
                            <group colspan="4" col="4" string="Detail">
                                <field name="add_characteristics_type_id"/>
                                <field name="category_id" readonly="1"/>
                                <field name="is_numerical_value" attrs="{'invisible': 1}"/>
                            </group>
                            <group colspan="4" col="4" string="Filter">
                                <field name="min_value" attrs="{'invisible': [('is_numerical_value', '=', False)]}"/>
                                <field name="max_value" attrs="{'invisible': [('is_numerical_value', '=', False)]}"/>                               
                                <field name="spec_min_value" attrs="{'invisible': [('is_numerical_value', '=', False)]}"/>
                                <field name="spec_max_value" attrs="{'invisible': [('is_numerical_value', '=', False)]}"/>
                                <field name="list_possible_values_ids" colspan="4" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="spec_value" />
                                        <field name="unit_value" />                                    
                                        <field name="use_value" />
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </group>
                    <footer>
                        <button name="add_filter" string="Add Filter" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_create_advanced_search_filter">
            <field name="name">Advanced filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">connector.advanced.search</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>