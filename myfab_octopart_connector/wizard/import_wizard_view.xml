<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_form_connector_import_wizard_template">
            <field name="name">view_form_connector_import_wizard_template</field>
            <field name="model">octopart.import.wizard.template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import wizard">
                    <group colspan="4" col="4" string="Import wizard">
                        <field name="code_product"/>
                        <field name="name"/>
                        <field name="product_template_id"/>
                        <field name="directory_id"/>
                        <field name="datasheet" readonly="True"/>
                        <field name="image" readonly="True"/>
                        <group colspan="4" col="2" string="Supplier reference informations">  
                            <field name="company_id"/>
                            <field name="uop_id"/>
                            <field name="uoi_id"/>
                        </group>
                        <button name="import_details" string="Import details"
                            type="object" class="oe_inline oe_stat_button" icon="fa-cog" />
                        <group colspan="4" col="1" string="Offers">
                            <field name="list_seller_offers_ids" colspan="4" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name" />  
                                    <field name="seller_identifier" />
                                    <field name="sku" />
                                </tree>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button name="import_product_template_wizard" string="Import product" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_create_import_wizard_template">
            <field name="name">Import product options</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">octopart.import.wizard.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

