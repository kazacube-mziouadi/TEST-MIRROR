<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!-- FORM VIEW -->
        <record id='mf_view_form_xlsx_config_sheet' model='ir.ui.view'>
            <field name="name">mf_view_form_xlsx_config_sheet</field>
            <field name="model">mf.xlsx.config.sheet</field>
            <field name="arch" type="xml">
                <form string="XLSX to XML Configuration" version="8.0">
                    <group colspan="8" col="9" name="group_all"> 
                        <group colspan="8" col="4" name="group_infos"> 
                            <field name="sheet_name_or_index"/>
                            <field name="xml_beacon_for_sheet"/>
                            <field name="starting_line"/>
                            <field name="ending_line"/>
                            <field name="sequence"/>
                        </group>
                        <group colspan="8" col="1" name="group_fields" string="Fields"> 
                            <group colspan="2" col="2" name="group_fields_infos"> 
                                <field name="level_field_id"/>
                                <field name="xml_beacon_grouping_fields"/>
                            </group>
                            <field name="field_ids" nolabel="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        
        <!-- TREE VIEW -->
        <record id='mf_view_tree_xlsx_config_sheet' model='ir.ui.view'>
            <field name="name">mf_view_tree_xlsx_config_sheet</field>
            <field name="model">mf.xlsx.config.sheet</field>
            <field name="arch" type="xml">
                <tree string="XLSX to XML - Sheet configuration">
                    <field name="sequence" />
                    <field name="sheet_name_or_index" />
                    <field name="starting_line" />
                    <field name="xml_beacon_for_sheet" />
                    <field name="level_field_id" />
                    <field name="xml_beacon_grouping_fields" />
                </tree>
            </field>
        </record>
	</data>
</openerp>
