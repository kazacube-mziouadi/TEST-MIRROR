<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!-- FORM VIEW -->
        <record id='mf_view_form_xlsx_config_sheet_level' model='ir.ui.view'>
            <field name="name">mf_view_form_xlsx_config_sheet_level</field>
            <field name="model">mf.xlsx.config.sheet.level</field>
            <field name="arch" type="xml">
                <form string="XLSX to XML Configuration" version="8.0">
                    <group colspan="2" col="2" name="group_infos"> 
                        <field name="column"/>
                        <field name="is_level_mono_column"/>
                        <field name="level_separator" attrs="{'invisible': [('is_level_mono_column', '=', False)], 'required': [('is_level_mono_column', '!=', False)]}"/>
                        <field name="parent_reference_column" attrs="{'invisible': [('is_level_mono_column', '=', True)], 'required': [('is_level_mono_column', '!=', True)]}"/>
                        <field name="xml_beacon_grouping_children_level"/>
                        <field name="parent_xml_beacon_new_name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <!-- TREE VIEW -->
        <record id='mf_view_tree_xlsx_config_sheet_level' model='ir.ui.view'>
            <field name="name">mf_view_tree_xlsx_config_sheet_level</field>
            <field name="model">mf.xlsx.config.sheet.level</field>
            <field name="arch" type="xml">
                <tree string="XLSX to XML - Level configuration">
                    <field name="name" />
                </tree>
            </field>
        </record>
	</data>
</openerp>
