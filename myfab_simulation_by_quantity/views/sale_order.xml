<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <record id="mf_inherited_sale_order_form" model="ir.ui.view">
        <field name="name">mf_inherited_sale_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_form_sale_order" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line_ids']/tree/field[@name='total_price']" position="after">
                <!-- Open on the form view  -->
                <button class="oe_inline oe_stat_button"
                        type="action"
                        context="{'mf_sale_order_line_id': id}"
                        name="%(mf_action_create_generic_simulation_by_quantity)d"
						string="Simulation by quantity"
						icon="fa-calculator"/>
            </xpath>
            <xpath expr="//group[@name='action_sale_line_menu']" position="inside">
                <!-- Open on the form view  -->
                <button class="oe_inline oe_stat_button"
                        type="action"
                        context="{'mf_sale_order_line_id': id}"
                        name="%(mf_action_create_generic_simulation_by_quantity)d"
						string="Simulation by quantity"
						icon="fa-calculator"/>
            </xpath>
        </field>
    </record>

</openerp>
