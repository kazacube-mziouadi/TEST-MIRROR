<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id='mf_simulation_by_quantity_line' model="ir.actions.act_window">
        	<field name="name">myfab Simulation by quantity line</field>
			<field name="res_model">mf.simulation.by.quantity.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
        </record>

		<record id='mf_simulation_by_quantity_line_treeview' model="ir.ui.view">
        	<field name="name">myfab Simulations by quantity</field>
			<field name="model">mf.simulation.by.quantity.line</field>
            <field name="arch" type="xml">
				<tree string="myfab Simulations by quantity" default_order="sequence" editable="bottom">
					<field name="mf_selected_for_creation"/>
					<field name="sequence"/>
					<field name="mf_quantity" />
					<field name="mf_product_id"/>
					<field name="mf_bom_id" domain="[('product_id', '=', mf_product_id)]"/>
					<field name="mf_routing_id" domain="[('bom_ids', 'in', mf_bom_id)]"/>
					<field name="mf_price_material" />
					<field name="mf_price_consumable_is_visible" invisible="1"/>
					<field name="mf_price_consumable" column_invisible_list="[('mf_price_consumable_is_visible', '=', False)]"/>
					<field name="mf_price_subcontracting_is_visible" invisible="1"/>
					<field name="mf_price_subcontracting" column_invisible_list="[('mf_price_subcontracting_is_visible', '=', False)]"/>
					<field name="mf_price_workforce_is_visible" invisible="1"/>
					<field name="mf_price_workforce" column_invisible_list="[('mf_price_workforce_is_visible', '=', False)]"/>
					<field name="mf_general_costs_is_visible" invisible="1"/>
					<field name="mf_general_costs" column_invisible_list="[('mf_general_costs_is_visible', '=', False)]"/>
					<field name="mf_unit_cost_price" />
					<field name="mf_unit_margin_is_visible" invisible="1"/>
					<field name="mf_unit_margin" column_invisible_list="[('mf_unit_margin_is_visible', '=', False)]"/>
					<field name="mf_unit_sale_price" />
					<field name="mf_hour_sale_price" />
					<field name="mf_total_cost_price" />
					<field name="mf_total_margin" />
					<field name="mf_total_sale_price" />
				</tree>
			</field>
        </record>

        <record id='mf_simulation_by_quantity_line_form' model="ir.ui.view">
        	<field name="name">mf.simulation.by.quantity.line.form</field>
			<field name="model">mf.simulation.by.quantity.line</field>
            <field name="arch" type="xml">
				<form string="myfab Simulation by quantity line" version="8.0">
					<group col="6">
						<field name="sequence"/>
						<field name="mf_selected_for_creation"/>
						<field name="mf_quantity"/>
						<field name="mf_product_id"/>
						<field name="mf_bom_id" domain="[('product_id', '=', mf_product_id)]"/>
						<field name="mf_routing_id" domain="[('bom_ids', 'in', mf_bom_id)]"/>
						<field name="mf_price_material" />
						<field name="mf_price_consumable" />
						<field name="mf_price_subcontracting" />
						<field name="mf_price_workforce" />
						<field name="mf_general_costs" />
						<field name="mf_unit_cost_price" />
						<field name="mf_unit_margin" />
						<field name="mf_unit_sale_price" />
						<field name="mf_hour_sale_price" />
						<field name="mf_total_cost_price" />
						<field name="mf_total_margin" />
						<field name="mf_total_sale_price" />
					</group>
				</form>
			</field>
		</record>
    </data>
</openerp>