<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id='mf_simulation_by_quantity_line' model="ir.actions.act_window">
        	<field name="name">myfab Simulation by quantity line</field>
			<field name="res_model">mf.simulation.by.quantity.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
        </record>

		<record id='mf_simulation_by_quantity_line_treeview' model="ir.ui.view">
        	<field name="name">myfab Simulations by quantity</field>
			<field name="model">mf.simulation.by.quantity.line</field>
            <field name="arch" type="xml">
				<tree string="myfab Simulations by quantity" default_order="sequence" editable="bottom">
					<field name="mf_selected_for_creation"/>
					<field name="sequence" invisible="1"/>
					<field name="mf_quantity" />
					<field name="mf_product_id"/>
					<field name="mf_bom_id" domain="[('product_id', '=', mf_product_id)]"/>
					<field name="mf_routing_id" domain="[('bom_ids', 'in', mf_bom_id)]"/>
					<field name="mf_material_unit_price" column_invisible_list="[('mf_material_unit_price_is_visible', '=', False)]"/>
					<field name="mf_material_total_price" column_invisible_list="[('mf_material_total_price_is_visible', '=', False)]"/>
					<field name="mf_material_unit_prcnt_margin" column_invisible_list="[('mf_material_unit_prcnt_margin_is_visible', '=', False)]"/>
					<field name="mf_material_unit_amount_margin" column_invisible_list="[('mf_material_unit_amount_margin_is_visible', '=', False)]"/>

					<field name="mf_consumable_unit_price" column_invisible_list="[('mf_consumable_unit_price_is_visible', '=', False)]"/>

					<field name="mf_workforce_unit_price" column_invisible_list="[('mf_workforce_unit_price_is_visible', '=', False)]"/>
					<field name="mf_workforce_total_price" column_invisible_list="[('mf_workforce_total_price_is_visible', '=', False)]"/>
					<field name="mf_workforce_unit_prcnt_margin" column_invisible_list="[('mf_workforce_unit_prcnt_margin_is_visible', '=', False)]"/>
					<field name="mf_workforce_unit_amount_margin" column_invisible_list="[('mf_workforce_unit_amount_margin_is_visible', '=', False)]"/>

					<field name="mf_free_costs" column_invisible_list="[('mf_free_costs_is_visible', '=', False)]"/>

					<field name="mf_unit_cost_price" />
					<field name="mf_total_cost_price" />

					<field name="mf_unit_prcnt_margin" column_invisible_list="[('mf_unit_prcnt_margin_is_visible', '=', False)]"/>
					<field name="mf_unit_amount_margin" column_invisible_list="[('mf_unit_amount_margin_is_visible', '=', False)]"/>

					<field name="mf_unit_sale_price" />
					<field name="mf_total_sale_price" />
					<field name="mf_hour_sale_price" column_invisible_list="[('mf_workforce_unit_price_is_visible', '=', False)]"/>
					<field name="mf_total_margin" />

					<field name="mf_material_unit_price_is_visible" invisible="1"/>
					<field name="mf_material_total_price_is_visible" invisible="1"/>
					<field name="mf_material_unit_prcnt_margin_is_visible" invisible="1"/>
					<field name="mf_material_unit_amount_margin_is_visible" invisible="1"/>
					<field name="mf_consumable_unit_price_is_visible" invisible="1"/>
					<field name="mf_workforce_unit_price_is_visible" invisible="1"/>
					<field name="mf_workforce_unit_price_is_visible" invisible="1"/>
					<field name="mf_workforce_total_price_is_visible" invisible="1"/>
					<field name="mf_workforce_unit_prcnt_margin_is_visible" invisible="1"/>
					<field name="mf_workforce_unit_amount_margin_is_visible" invisible="1"/>
					<field name="mf_subcontracting_unit_price_is_visible" invisible="1"/>
					<field name="mf_free_costs_is_visible" invisible="1"/>
					<field name="mf_unit_prcnt_margin_is_visible" invisible="1"/>
					<field name="mf_unit_amount_margin_is_visible" invisible="1"/>
				</tree>
			</field>
        </record>

        <record id='mf_simulation_by_quantity_line_form' model="ir.ui.view">
        	<field name="name">mf.simulation.by.quantity.line.form</field>
			<field name="model">mf.simulation.by.quantity.line</field>
            <field name="arch" type="xml">
				<form string="myfab Simulation by quantity line" version="8.0">
					<group col="6">
						<field name="sequence"/>
						<field name="mf_selected_for_creation"/>
						<field name="mf_quantity"/>
						<field name="mf_product_id"/>
						<field name="mf_bom_id" domain="[('product_id', '=', mf_product_id)]"/>
						<field name="mf_routing_id" domain="[('bom_ids', 'in', mf_bom_id)]"/>
						<field name="mf_material_unit_price" attrs="{'invisible': [('mf_material_unit_price_is_visible', '=', False)]}"/>
						<field name="mf_material_total_price" attrs="{'invisible': [('mf_material_total_price_is_visible', '=', False)]}"/>
						<field name="mf_material_unit_prcnt_margin" attrs="{'invisible': [('mf_material_unit_prcnt_margin_is_visible', '=', False)]}"/>
						<field name="mf_material_unit_amount_margin" attrs="{'invisible': [('mf_material_unit_amount_margin_is_visible', '=', False)]}"/>

						<field name="mf_consumable_unit_price" attrs="{'invisible': [('mf_consumable_unit_price_is_visible', '=', False)]}"/>

						<field name="mf_workforce_unit_price" attrs="{'invisible': [('mf_workforce_unit_price_is_visible', '=', False)]}"/>
						<field name="mf_workforce_total_price" attrs="{'invisible': [('mf_workforce_total_price_is_visible', '=', False)]}"/>
						<field name="mf_workforce_unit_prcnt_margin" attrs="{'invisible': [('mf_workforce_unit_prcnt_margin_is_visible', '=', False)]}"/>
						<field name="mf_workforce_unit_amount_margin" attrs="{'invisible': [('mf_workforce_unit_amount_margin_is_visible', '=', False)]}"/>

						<field name="mf_free_costs" attrs="{'invisible': [('mf_free_costs_is_visible', '=', False)]}"/>

						<field name="mf_unit_cost_price" />
						<field name="mf_total_cost_price" />

						<field name="mf_unit_prcnt_margin" attrs="{'invisible': [('mf_unit_prcnt_margin_is_visible', '=', False)]}"/>
						<field name="mf_unit_amount_margin" attrs="{'invisible': [('mf_unit_amount_margin_is_visible', '=', False)]}"/>

						<field name="mf_unit_sale_price" />
						<field name="mf_total_sale_price" />
						<field name="mf_hour_sale_price" attrs="{'invisible': [('mf_workforce_unit_price_is_visible', '=', False)]}"/>
						<field name="mf_total_margin" />
					</group>
					<group col="2" string="Configuration">
						<field name="mf_material_unit_price_is_visible" invisible="0"/>
						<field name="mf_material_total_price_is_visible" invisible="0"/>
						<field name="mf_material_unit_prcnt_margin_is_visible" invisible="0"/>
						<field name="mf_material_unit_amount_margin_is_visible" invisible="0"/>
						<field name="mf_consumable_unit_price_is_visible" invisible="0"/>
						<field name="mf_workforce_unit_price_is_visible" invisible="0"/>
						<field name="mf_workforce_unit_price_is_visible" invisible="0"/>
						<field name="mf_workforce_total_price_is_visible" invisible="0"/>
						<field name="mf_workforce_unit_prcnt_margin_is_visible" invisible="0"/>
						<field name="mf_workforce_unit_amount_margin_is_visible" invisible="0"/>
						<field name="mf_subcontracting_unit_price_is_visible" invisible="0"/>
						<field name="mf_free_costs_is_visible" invisible="0"/>
						<field name="mf_unit_prcnt_margin_is_visible" invisible="0"/>
						<field name="mf_unit_amount_margin_is_visible" invisible="0"/>
					</group>
				</form>
			</field>
		</record>
    </data>
</openerp>