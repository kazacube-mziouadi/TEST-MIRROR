<openerp>
    <data>
        <!-- =========================== -->
		<!-- MYFAB PRE-INSTALL CONFIG    -->
		<!-- =========================== -->
		<record id="view_data_initializer_myfab_mf" model="ir.ui.view">
            <field name="name">data.initializer.myfab.mf.form</field>
            <field name="model">data.initializer.myfab.mf</field>
            <field name="arch" type="xml">
                <form>
                    <p>Select the features you wish to deploy :</p>
                    <group col="2">
                        <field name="launch_base_init"/>
                        <field name="launch_data_recovery_templates_init"/>
                        <field name="launch_modules_init" attrs="{'invisible': [('is_myfab_dependencies_installed', '=', True)]}"/>
                        <field name="launch_dev_tools_init"/>
                        <field name="is_myfab_dependencies_installed" invisible="1"/>
                    </group>
                    <p style="color:red" attrs="{'invisible': [('launch_base_init', '=', False)]}">
                        Warning : Launching the base initialization may overwrite your current configurations.
                    </p>
                    <footer>
                        <button name="launch_initialization" type="object" string="Continue" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_data_initializer_myfab_mf" model="ir.actions.act_window">
            <field name="name">myfab Base</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">data.initializer.myfab.mf</field>
            <field name="view_id" ref="view_data_initializer_myfab_mf"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="data_initializer_myfab_mf_todo" model="ir.actions.todo">
            <field name="action_id" ref="action_data_initializer_myfab_mf"/>
            <field name="state">open</field>
            <field name="sequence">50</field>
            <field name="type">automatic</field>
        </record>
    </data>
</openerp>
