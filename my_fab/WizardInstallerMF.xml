<openerp>
    <data>
        <!-- =========================== -->
		<!-- MYFAB PRE-INSTALL CONFIG    -->
		<!-- =========================== -->
		<record id="view_wizard_installer_mf" model="ir.ui.view">
            <field name="name">myfab.installer.mf.form</field>
            <field name="model">myfab.installer.mf</field>
            <field name="inherit_id" ref="base.res_config_installer"/>
            <field name="arch" type="xml">
                <form position="attributes">
                    <attribute name="string">MyFab Pre-Install Config</attribute>
                </form>
                <separator name="title" position="replace">
                    <field name="name" class="oe_inline"/>
                    <field type="file" id-attf-id="file_#{_id}" widget="drag-and-drop-field"
                       name="file" class="oe_import_file my_fab_drag_and_drop" accept=".csv, .xls, .xlsx, .ods"/>
                    <div class="drag_and_drop_area">
                        <p>Glissez un fichier .csv ici.</p>
                    </div>
                </separator>
                <footer position="replace">
                    <footer>
                        <button name="action_validate_config" type="object" string="Continue" class="oe_highlight"/>
                    </footer>
                </footer>
            </field>
        </record>

        <record id="action_wizard_installer_mf" model="ir.actions.act_window">
            <field name="name">Configure Accounting Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myfab.installer.mf</field>
            <field name="view_id" ref="view_wizard_installer_mf"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="wizard_installer_mf_todo" model="ir.actions.todo">
            <field name="action_id" ref="action_wizard_installer_mf"/>
            <field name="sequence">3</field>
            <field name="type">automatic</field>
        </record>
    </data>
</openerp>
