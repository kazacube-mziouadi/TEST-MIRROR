<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!-- ========== -->
		<!-- PARTNER    -->
		<!-- ========== -->
        <record id="my_fab_partner_score" model="ir.ui.view">
			<field name="name">my_fab_partner_score</field>
			<field name="inherit_id" ref="partner_openprod.openprod_view_partner_form" />
			<field name="model">res.partner</field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='lang']" position="after">
					<field name="mf_score" />
				</xpath>
			</field>
		</record>

		<!-- =================== -->
		<!-- IMPORT FROM INTUIZ    -->
		<!-- =================== -->

		<!-- Modale affichée lors du clic sur "Import from Intuiz" -->
		<record id='view_form_wizard_partner_import_from_intuiz' model='ir.ui.view'>
            <field name="name">view_form_wizard_partner_import_from_intuiz</field>
            <field name="model">wizard.partner.import.intuiz</field>
            <field name="arch" type="xml">
                <form string="Import from Intuiz" version="8.0">
                    <footer>
                        <button name="action_validate" string="OK" type="object" class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

		<!-- Bouton d'action "Import from Intuiz" -->
	  	<act_window
	  	    name="Import from Intuiz"
	  	    res_model="wizard.partner.import.intuiz"
	  	    src_model="res.partner"
	  	    view_mode="form"
	  	    target="new"
	  	    id="act_wizard_partner_import_from_intuiz"
            />

		<!-- =================== -->
		<!-- REFRESH FROM INTUIZ -->
		<!-- =================== -->

		<!-- Modale affichée lors du clic sur "Refresh from Intuiz" -->
		<record id='view_form_wizard_partner_refresh_from_intuiz' model='ir.ui.view'>
            <field name="name">view_form_wizard_partner_refresh_from_intuiz</field>
            <field name="model">wizard.partner.refresh.intuiz</field>
            <field name="arch" type="xml">
                <form string="Refresh from Intuiz" version="8.0">
                    <group>
                        <field name="partner_ids" colspan="4" nolabel="1" />
                    </group>
                    <footer>
                        <button name="action_validate" string="OK" type="object" class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

		<!-- Bouton d'action "Refresh from Intuiz" -->
	  	<act_window
	  	    name="Refresh from Intuiz"
	  	    res_model="wizard.partner.refresh.intuiz"
	  	    src_model="res.partner"
	  	    view_mode="form"
	  	    target="new"
	  	    id="act_wizard_partner_refresh_from_intuiz" />
    </data>
</openerp>
