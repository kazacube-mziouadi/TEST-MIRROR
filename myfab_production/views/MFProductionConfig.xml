<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id='mf_production_config' model="ir.actions.act_window">
        	<field name="name">myfab production config</field>
			<field name="res_model">mf.production.config</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
        </record>

		<record id='mf_production_config_treeview' model="ir.ui.view">
        	<field name="name">myfab production config configs</field>
			<field name="model">mf.production.config</field>
            <field name="arch" type="xml">
				<tree string="myfab production configs" create="false" delete="0">
					<field name="name"/>
				</tree>
			</field>
        </record>

        <record id='mf_production_config_form' model="ir.ui.view">
        	<field name="name">mf.production.config.form</field>
			<field name="model">mf.production.config</field>
            <field name="arch" type="xml">
				<form string="myfab production config" create="0" delete="0">
					<group col="2" string="Time tracking config">
						<field name="mf_use_default_end_time" />
						<field name="mf_default_end_time"
							   widget="float_time"
							   attrs="{'required': [('mf_use_default_end_time', '=', True)]}"/>
					</group>
				</form>
			</field>
		</record>
    </data>
</openerp>