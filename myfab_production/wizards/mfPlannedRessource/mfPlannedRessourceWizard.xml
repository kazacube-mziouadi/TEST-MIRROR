<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="view_form_split_sale">
            <field name="name">view_form_planned_ressource</field>
            <field name="model">planned.ressource.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Change planned ressource">
                    <group colspan="4" col="4">
                        <field name="mf_planned_ressource_id" />
                        <field name="mf_mo_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="change_ressource" string="Change ressource" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_planned_ressource">
            <field name="name">Change planned ressource</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">planned.ressource.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>