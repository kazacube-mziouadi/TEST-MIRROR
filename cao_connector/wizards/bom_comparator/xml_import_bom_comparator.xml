<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_form_xml_import_bom_comparator">
            <field name="name">view_form_xml_import_bom_comporator</field>
            <field name="model">xml.import.bom.comparator</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bom comparator">
                    <group colspan="12">
                        <group colspan="6" string="Components">
                            <!--<field name="mf_product_id" domain="[('id','=',False)]"/>-->
                            <!--<field name="mf_bom_id"/>-->
                        </group>
                        <group colspan="6" string="Existing components">
                            <field name="">
                                <tree string="BoM Structure">
                                    <field name="sequence" invisible="1" />
                                    <field name="price_qty" invisible="1" />
                                    <field name="product_id" />
                                    <field name="qty_with_factor" compute_value_recurs="['return_qty_component_with_price_qty_on_qty', ['price_qty', 'quantity']]" />
                                    <field name="type_component" />
                                    <field name="quantity" compute_value_recurs="['return_qty_component_with_price_qty_unit', ['price_qty', 'quantity', 'fixedvalue:price_qty']]" />
                                    <field name="fixed_qty" />
                                    <field name="uom_id" />
                                    <field name="production_cost_price" />
                                    <field name="price_total_component_buy" />
                                    <field name="price_unit_component_buy" />
                                    <field name="price_total_routing" />
                                    <field name="routing_first_price" />
                                    <field name="routing_first_id" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button name="validate_bom_selection" string="Validate" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mf_bom_comparator">
            <field name="name">Import XML file</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xml.import.bom.comparator</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.actions.act_window" id="mf_bom_comparator_simulation">
            <field name="name">Simulate import XML file</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xml.import.bom.comparator</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>