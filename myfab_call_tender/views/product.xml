<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- FORM VIEW Product (Stock) -->
		<record model="ir.ui.view" id="mf_view_form_inherit_product">
			<field name="name">mf_view_form_inherit_product</field>
			<field name="inherit_id" ref="sale_purchase.view_form_product_sale_purchase" />
			<field name="priority" eval="1401" />
			<field name="model">product.product</field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='plan_control_ids']//form//field[@name='pdf_file']" position="attributes">
					<attribute name="attrs">{'invisible': [('type', 'not in', ('pdf_receipt', 'pdf_delivery', 'pdf_production', 'pdf_purchase_mail', 'pdf_sale_mail', 'mf_pdf_call_tender_mail'))], 
						'required': [('type', 'in', ('pdf_receipt', 'pdf_delivery', 'pdf_production', 'pdf_purchase_mail', 'pdf_sale_mail', 'mf_pdf_call_tender_mail'))]}
					</attribute>
				</xpath>
			</field>
		</record>

		<!-- FORM VIEW Product category (Stock) -->
		<record model="ir.ui.view" id="mf_view_form_inherit_product_category">
			<field name="name">mf_view_form_inherit_product_category</field>
			<field name="inherit_id" ref="sale_purchase.view_form_product_category_sale_purchase_inherit" />
			<field name="priority" eval="4001" />
			<field name="model">product.category</field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='plan_control_ids']//form//field[@name='pdf_file']" position="attributes">
					<attribute name="attrs">{'invisible': [('type', 'not in', ('pdf_receipt', 'pdf_delivery', 'pdf_production', 'pdf_purchase_mail', 'pdf_sale_mail', 'mf_pdf_call_tender_mail'))], 
						'required': [('type', 'in', ('pdf_receipt', 'pdf_delivery', 'pdf_production', 'pdf_purchase_mail', 'pdf_sale_mail', 'mf_pdf_call_tender_mail'))]}
					</attribute>
				</xpath>
			</field>
		</record>

		<!-- FORM VIEW Product category -->
		<record id="mf_view_form_product_category_sale_purchase_inherit" model="ir.ui.view">
			<field name="name">mf_view_form_product_category_sale_purchase_inherit </field>
			<field name="model">product.category</field>
			<field name="priority" eval="1001" />
			<field name="inherit_id" ref="stock.view_form_product_category_inherit" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='plan_control_ids']//form//field[@name='pdf_file']" position="attributes">
					<attribute name="attrs">{'invisible': [('type', 'not in', ('pdf_receipt', 'pdf_delivery', 'pdf_purchase_mail', 'pdf_sale_mail', 'mf_pdf_call_tender_mail'))], 
						'required': [('type', 'in', ('pdf_receipt', 'pdf_delivery', 'pdf_purchase_mail', 'pdf_sale_mail', 'mf_pdf_call_tender_mail'))]}
					</attribute>
				</xpath>
			</field>
		</record>

		<!-- FORM VIEW Product -->
		<record id='mf_view_form_product_sale_purchase' model='ir.ui.view'>
			<field name="name">mf_view_form_product_sale_purchase</field>
			<field name="model">product.product</field>
			<field name="priority" eval="1001" />
			<field name="inherit_id" ref="stock.view_form_product" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='plan_control_ids']//form//field[@name='pdf_file']" position="attributes">
					<attribute name="attrs">{'invisible': [('type', 'not in', ('pdf_receipt', 'pdf_delivery', 'pdf_purchase_mail', 'pdf_sale_mail'))], 
						'required': [('type', 'in', ('pdf_receipt', 'pdf_delivery', 'pdf_purchase_mail', 'pdf_sale_mail'))]}
					</attribute>
				</xpath>
			</field>
		</record>
	</data>
</openerp>