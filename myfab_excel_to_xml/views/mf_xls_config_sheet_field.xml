<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!-- FORM VIEW -->
        <record id='mf_view_form_xls_config_sheet_field' model='ir.ui.view'>
            <field name="name">mf_view_form_xls_config_sheet_field</field>
            <field name="model">mf.xls.config.sheet.field</field>
            <field name="arch" type="xml">
                <form string="Excel to XMl configuration" version="8.0">
                    <group colspan="4" col="4" name="group_infos"> 
                        <field name="sequence"/>
                        <field name="writing_mode"/>
                        <field name="value"/>
                        <field name="beacon_in_parent"/>
                        <field name="attribute"/>
                        <field name="is_merge_attributes" attrs="{'invisible': ['|',('attribute', '=', ''),('attribute', '=', False)]}"/>
                    </group>
                </form>
            </field>
        </record>
        
        <!-- TREE VIEW -->
        <record id='mf_view_tree_xls_config_sheet_field' model='ir.ui.view'>
            <field name="name">mf_view_tree_xls_config_sheet_field</field>
            <field name="model">mf.xls.config.sheet.field</field>
            <field name="arch" type="xml">
                <tree string="Excel to XMl - Field configuration">
                    <field name="sequence" />
                    <field name="beacon_in_parent" />
                    <field name="writing_mode" />
                    <field name="value" />
                    <field name="attribute" />
                </tree>
            </field>
        </record>
	</data>
</openerp>
