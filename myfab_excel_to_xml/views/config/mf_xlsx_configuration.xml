<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!-- FORM VIEW -->
        <record id='mf_view_form_xlsx_configuration' model='ir.ui.view'>
            <field name="name">mf_view_form_xlsx_configuration</field>
            <field name="model">mf.xlsx.configuration</field>
            <field name="arch" type="xml">
                <form string="Excel to XMl configuration" version="8.0">
                    <group colspan="8" col="9" name="group_all"> 
                        <group colspan="8" col="8" name="group_name"> 
                            <div>
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                        </group>
                        <group colspan="8" col="2" name="group_infos"> 
                            <field name="root_beacon"/>
                        </group>
                        <group colspan="8" col="1" name="group_sheets" string="Sheets"> 
                            <field name="sheet_ids" nolabel="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        
        <!-- TREE VIEW -->
        <record id='mf_view_tree_xlsx_configuration' model='ir.ui.view'>
            <field name="name">mf_view_tree_xlsx_configuration</field>
            <field name="model">mf.xlsx.configuration</field>
            <field name="arch" type="xml">
                <tree string="Excel to XMl configuration">
                    <field name="name" />
                </tree>
            </field>
        </record>
        


        <!-- TODO : add action to cao -->
        <record model="ir.actions.act_window"
            id="mf_action_see_xlsx_configuration">
            <field name="name">Excel to XMl configuration</field>
            <field name="res_model">mf.xlsx.configuration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- TODO : add menu to cao -->
        <menuitem name="Excel to XMl configuration"
            action="mf_action_see_xlsx_configuration" 
            id="mf_menu_xlsx_configuration"
            parent="base.menu_tracability_export_import"/>
	</data>
</openerp>
