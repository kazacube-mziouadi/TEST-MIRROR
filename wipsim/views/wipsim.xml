<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- =============== -->
		<!-- WIPSIM EXPORT   -->
		<!-- =============== -->
        <record id='wipsim_export_mf' model="ir.actions.act_window">
        	<field name="name">WipSim Export</field>
			<field name="res_model">wipsim.export.mf</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
        </record>

		<record id='wipsim_export_mf_treeview' model="ir.ui.view">
        	<field name="name">WipSim Export</field>
			<field name="model">wipsim.export.mf</field>
            <field name="arch" type="xml">
				<tree string="WipSim Export Configurations">
					<field name="name"/>
				</tree>
			</field>
        </record>

        <record id='wipsim_export_mf_form' model="ir.ui.view">
        	<field name="name">wipsim.export.mf.form</field>
			<field name="model">wipsim.export.mf</field>
            <field name="arch" type="xml">
				<form string="WipSim Export Configuration">
					<group col="9">
						<field name="ir_cron_wipsim_export_mf" invisible="1" required="0" colspan="4" />
						<group colspan="8" col="1">
							<group col="4">
								<field name="name"/>
								<field name="planned_start_date_min_mf"/>
								<field name="files_path_mf"/>
								<field name="planned_start_date_max_mf"/>
							</group>
							<group col="1">
								<field name="resources_mf"/>
								<field name="areas_mf"/>
							</group>
							<button
								name="export_work_orders"
								string="Export Work Orders"
								type="object"
								class="oe_highlight" />
							<group col="1">
								<field name="last_json_generated_mf"/>
							</group>
						</group>
						<group colspan="1" col="1" class="op_shortcuts" name="wipsim_export_action_menu_mf">
							<separator string="Actions" colspan="1" name="separator_action_menu_mf" />
							<button class="oe_inline oe_stat_button" type="object" string="Generate cron for this export" name="generate_cron_for_export" icon="fa-repeat" />
							<button class="oe_inline oe_stat_button" type="object" string="Delete the cron for this export" name="delete_cron_for_export" icon="fa-trash" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<!-- ===================== -->
		<!-- CRON WIPSIM EXPORT MF -->
		<!-- ===================== -->

		<record id='ir_cron_wipsim_export_mf_form' model="ir.ui.view">
        	<field name="name">ir.cron.wipsim.export.mf.form</field>
			<field name="model">ir.cron.wipsim.export.mf</field>
            <field name="arch" type="xml">
				<form string="WipSim Export Cron Configuration">
					<group col="2">
						<field name="interval_number"/>
						<field name="interval_type"/>
						<field name="nextcall"/>
					</group>
				</form>
			</field>
		</record>
    </data>
</openerp>