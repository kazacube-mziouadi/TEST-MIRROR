<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id='filter_value_comparison_mf' model="ir.actions.act_window">
        	<field name="name">myfab field filter value comparison</field>
			<field name="res_model">filter.value.comparison.mf</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
        </record>

		<record id='filter_value_comparison_mf_treeview' model="ir.ui.view">
        	<field name="name">myfab field filter value comparison</field>
			<field name="model">filter.value.comparison.mf</field>
            <field name="arch" type="xml">
				<tree string="myfab Field Filters Value Comparison">
					<field name="operator_mf"/>
					<field name="value_mf"/>
				</tree>
			</field>
        </record>

        <record id='filter_value_comparison_mf_form' model="ir.ui.view">
        	<field name="name">filter.value.comparison.mf.form</field>
			<field name="model">filter.value.comparison.mf</field>
            <field name="arch" type="xml">
				<form string="myfab field filter value comparison">
					<group col="2">
						<field name="operator_mf"/>
						<field name="value_mf"/>
					</group>
					<p attrs="{'invisible': [('operator_mf', 'not in', ['in', 'not in'])]}">
						Lists must be written in the format : ['value01', 'value02']
					</p>
				</form>
			</field>
		</record>
    </data>
</openerp>