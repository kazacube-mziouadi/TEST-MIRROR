<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id='file_interface_attempt_mf' model="ir.actions.act_window">
        	<field name="name">MyFab Model Export</field>
			<field name="res_model">file.interface.attempt.mf</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
        </record>

		<record id='file_interface_attempt_mf_treeview' model="ir.ui.view">
        	<field name="name">MyFab Model Export</field>
			<field name="model">file.interface.attempt.mf</field>
            <field name="arch" type="xml">
				<tree string="MyFab file interface attempts"
					  default_order="start_datetime_mf desc"
					  colors="red:not is_successful_mf;">
					<field name="file_name_mf"/>
					<field name="start_datetime_mf"/>
					<field name="end_datetime_mf"/>
					<field name="status_mf" colors="red:not is_successful_mf;"/>
					<field name="is_successful_mf" invisible="1"/>
				</tree>
			</field>
        </record>

        <record id='file_interface_attempt_mf_form' model="ir.ui.view">
        	<field name="name">file.interface.attempt.mf.form</field>
			<field name="model">file.interface.attempt.mf</field>
            <field name="arch" type="xml">
				<form string="MyFab file interface attempt">
					<group col="2" string="Status">
						<field name="status_mf"/>
						<field name="message_mf" readonly="1"/>
						<field name="is_successful_mf" invisible="1"/>
					</group>
					<group col="4" string="Timing">
						<field name="start_datetime_mf" readonly="1"/>
						<field name="end_datetime_mf" readonly="1"/>
					</group>
					<group col="1" string="File">
						<field name="file_name_mf" readonly="1"/>
						<field name="file_content_preview_mf" class="myfab_file_interface_file_content_mf" readonly="1"/>
						<group col="3" class="myfab_file_interface_attempt_buttons">
							<button
									name="download_processed_file"
									string="Download processed file"
									type="object"
									class="oe_highlight"
							/>
						</group>
					</group>
				</form>
			</field>
		</record>
    </data>
</openerp>